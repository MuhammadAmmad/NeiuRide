<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/textEditSettingContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="71dp"
            android:layout_marginStart="71dp"
            android:layout_marginTop="159dp"
            android:ems="10"
            android:hint="Please Enter"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/btnEditSettingClear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textEditSettingContent"
            android:layout_alignStart="@+id/textEditSettingContent"
            android:layout_below="@+id/textEditSettingContent"
            android:text="Clear" />

        <Button
            android:id="@+id/btnEditSettingSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textEditSettingContent"
            android:layout_alignRight="@+id/textEditSettingContent"
            android:layout_below="@+id/textEditSettingContent"
            android:text="Save" />

        <TextView
            android:id="@+id/textEditSettingHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="15dp"
            android:layout_toLeftOf="@+id/btnEditSettingSave"
            android:layout_toStartOf="@+id/btnEditSettingSave"
            android:text="Generic Heading" />

        <ImageView
            android:id="@+id/arrowBackToPersonalSetting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            app:srcCompat="@drawable/ic_arrow_back_black_24dp" />

    </RelativeLayout>
</LinearLayout>