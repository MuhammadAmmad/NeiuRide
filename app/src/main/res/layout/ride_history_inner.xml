<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.app.danny.neiuber.ride_history.DetailedRideHistory">


    <ImageView
        android:id="@+id/arrowBackToHistoryList"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/ic_arrow_back_black_24dp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgRideHistoryImage"
        android:layout_width="133dp"
        android:layout_height="86dp"
        android:src="@drawable/prisonmike"
        app:civ_border_color="#FF000000"
        app:civ_border_width="2dp"
        android:layout_marginTop="71dp"
        android:layout_below="@+id/arrowBackToHistoryList"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_alignLeft="@+id/imgRideHistoryImage"
        android:layout_alignStart="@+id/imgRideHistoryImage"
        android:layout_below="@+id/arrowBackToHistoryList"
        android:layout_marginTop="27dp"
        android:text="Details About Trip" />

    <TextView
        android:id="@+id/txtDetailedRideHistoryDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:layout_alignLeft="@+id/imgRideHistoryImage"
        android:layout_alignStart="@+id/imgRideHistoryImage"
        android:layout_below="@+id/imgRideHistoryImage"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:text="Date of Trip"
        android:layout_alignRight="@+id/imgRideHistoryImage"
        android:layout_alignEnd="@+id/imgRideHistoryImage" />

    <TextView
        android:id="@+id/txtDetailedRideHistoryStartingLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="Starting Location"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/txtDetailedRideHistoryDate"
        android:layout_alignLeft="@+id/txtDetailedRideHistoryDate"
        android:layout_alignStart="@+id/txtDetailedRideHistoryDate"
        android:layout_alignRight="@+id/txtDetailedRideHistoryDate"
        android:layout_alignEnd="@+id/txtDetailedRideHistoryDate" />

    <TextView
        android:id="@+id/txtDetailedRideHistoryEndingLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="Ending Location"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/txtDetailedRideHistoryStartingLocation"
        android:layout_alignLeft="@+id/txtDetailedRideHistoryStartingLocation"
        android:layout_alignStart="@+id/txtDetailedRideHistoryStartingLocation"
        android:layout_alignRight="@+id/txtDetailedRideHistoryStartingLocation"
        android:layout_alignEnd="@+id/txtDetailedRideHistoryStartingLocation" />

    <TextView
        android:id="@+id/txtDetailedRideHistoryFare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="Total Fare"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/txtDetailedRideHistoryEndingLocation"
        android:layout_alignLeft="@+id/txtDetailedRideHistoryEndingLocation"
        android:layout_alignStart="@+id/txtDetailedRideHistoryEndingLocation"
        android:layout_alignRight="@+id/txtDetailedRideHistoryEndingLocation"
        android:layout_alignEnd="@+id/txtDetailedRideHistoryEndingLocation" />

    <TextView
        android:id="@+id/txtDetailedRideHistoryDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="Total Distance"
        android:layout_below="@+id/txtDetailedRideHistoryFare"
        android:layout_alignLeft="@+id/txtDetailedRideHistoryFare"
        android:layout_alignStart="@+id/txtDetailedRideHistoryFare"
        android:layout_alignRight="@+id/txtDetailedRideHistoryFare"
        android:layout_alignEnd="@+id/txtDetailedRideHistoryFare" />


</RelativeLayout>
