<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="113dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgRideHistoryImage"
            android:layout_width="133dp"
            android:layout_height="86dp"
            android:src="@drawable/prisonmike"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true" />

        <TextView
            android:id="@+id/ride_time"
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:text="TextView"
            android:textSize="20dp"
            android:layout_toLeftOf="@+id/btnHistoryInfo"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imgRideHistoryImage"
            android:layout_toEndOf="@+id/imgRideHistoryImage" />

        <TextView
            android:id="@+id/ride_fare"
            android:layout_width="140dp"
            android:layout_height="60dp"

            android:text="TextView"
            android:textSize="20dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/imgRideHistoryImage"
            android:layout_below="@+id/ride_time"
            android:layout_alignRight="@+id/ride_time"
            android:layout_alignEnd="@+id/ride_time" />

        <ImageView
            android:id="@+id/btnHistoryInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_arrow_forward_black_24dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

</LinearLayout>